<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorAccent"
    android:layoutDirection="ltr"

    android:orientation="vertical"
    tools:context=".mSend.SendActivity">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorAccent"
        android:layoutDirection="ltr"

        android:orientation="vertical"
        tools:context=".mSend.SendActivity">

        <android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layoutDirection="ltr"
            android:background="@color/colorPrimary">


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="?actionBarSize">

                <ImageView
                    android:id="@+id/btn_logo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:adjustViewBounds="true"
                    android:layout_centerVertical="true"
                    android:foregroundGravity="center_horizontal"
                    android:paddingTop="@dimen/spacing_regular"
                    android:src="@drawable/ic__arrow" />

                <TextView
                    android:id="@+id/mSend_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:fontFamily="@font/iransans_bold"
                    android:paddingLeft="@dimen/spacing_large"
                    android:paddingTop="@dimen/spacing_regular"
                    android:paddingRight="@dimen/spacing_large"
                    android:paddingBottom="@dimen/spacing_regular"
                    android:text="درباره پیک من"
                    android:textAllCaps="true"
                    android:textColor="#464126"
                    android:textSize="15dp" />


            </RelativeLayout>


            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="?actionBarSize"
                android:layout_marginBottom="-25dp"
                app:cardBackgroundColor="#eeedee"
                app:cardCornerRadius="25dp">

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="8dp"
                    app:cardBackgroundColor="#ffffff"
                    app:cardCornerRadius="25dp">

                    <android.support.constraint.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="25dp">

                        <TextView
                            android:id="@+id/textView38"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="24dp"
                            android:text="خدمات انجام شده توسط پیک من به شما:"
                            android:textAllCaps="true"
                            android:textColor="#464126"
                            android:textSize="14dp"
                            android:fontFamily="@font/iransans_bold"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <android.support.constraint.ConstraintLayout
                            android:id="@+id/constraintLayout13"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="24dp"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/textView38">

                            <TextView
                                android:id="@+id/textView44"
                                android:layout_width="0.1dp"
                                android:layout_height="0dp"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent" />

                            <TextView
                                android:id="@+id/textView45"
                                android:layout_width="0.1dp"
                                android:layout_height="0dp"
                                android:layout_marginEnd="8dp"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintEnd_toStartOf="@+id/textView44"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent" />

                            <TextView
                                android:id="@+id/textView46"
                                android:layout_width="0.1dp"
                                android:layout_height="0dp"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toEndOf="@+id/textView44"
                                app:layout_constraintTop_toTopOf="parent" />

                            <android.support.constraint.ConstraintLayout
                                android:id="@+id/constraintLayout14"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                app:layout_constraintEnd_toStartOf="@+id/textView45"
                                app:layout_constraintHorizontal_bias="1.0"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent">

                                <TextView
                                    android:id="@+id/textView47"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="8dp"
                                    android:fontFamily="@font/iransans_bold"
                                    android:text="فروشگاه"
                                    android:textColor="#8d94a6"
                                    android:textSize="14dp"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintTop_toBottomOf="@+id/imageView30" />

                                <ImageView
                                    android:id="@+id/imageView30"
                                    android:layout_width="28dp"
                                    android:layout_height="28dp"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintTop_toTopOf="parent"
                                    app:srcCompat="@drawable/store" />

                                <TextView
                                    android:id="@+id/txtCountServiceStore"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="8dp"
                                    android:fontFamily="@font/iransans_fa_num_bold"
                                    android:text="12 سرویس"
                                    android:textColor="#303030"
                                    android:textSize="14dp"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintTop_toBottomOf="@+id/textView47" />

                            </android.support.constraint.ConstraintLayout>

                            <android.support.constraint.ConstraintLayout
                                android:id="@+id/constraintLayout15"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                app:layout_constraintEnd_toStartOf="@+id/textView44"
                                app:layout_constraintHorizontal_bias="0.0"
                                app:layout_constraintStart_toEndOf="@+id/constraintLayout14"
                                app:layout_constraintTop_toTopOf="parent">

                                <TextView
                                    android:id="@+id/textView50"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="8dp"
                                    android:fontFamily="@font/iransans_bold"
                                    android:text="غذا"
                                    android:textColor="#8d94a6"
                                    android:textSize="14dp"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintTop_toBottomOf="@+id/imageView31" />

                                <ImageView
                                    android:id="@+id/imageView31"
                                    android:layout_width="28dp"
                                    android:layout_height="28dp"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintTop_toTopOf="parent"
                                    app:srcCompat="@drawable/fast_food" />

                                <TextView
                                    android:id="@+id/txtCountServiceFood"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="8dp"
                                    android:fontFamily="@font/iransans_fa_num_bold"
                                    android:text="12 سرویس"
                                    android:textColor="#303030"
                                    android:textSize="14dp"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintTop_toBottomOf="@+id/textView50" />
                            </android.support.constraint.ConstraintLayout>

                            <android.support.constraint.ConstraintLayout
                                android:id="@+id/constraintLayout16"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                app:layout_constraintEnd_toStartOf="@+id/textView46"
                                app:layout_constraintStart_toEndOf="@+id/constraintLayout15"
                                app:layout_constraintTop_toTopOf="parent">

                                <TextView
                                    android:id="@+id/textView55"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="8dp"
                                    android:fontFamily="@font/iransans_bold"
                                    android:text="پست"
                                    android:textColor="#8d94a6"
                                    android:textSize="14dp"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintTop_toBottomOf="@+id/imageView35" />

                                <ImageView
                                    android:id="@+id/imageView35"
                                    android:layout_width="28dp"
                                    android:layout_height="28dp"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintTop_toTopOf="parent"
                                    app:srcCompat="@drawable/posti" />

                                <TextView
                                    android:id="@+id/txtCountServicePost"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="8dp"
                                    android:fontFamily="@font/iransans_fa_num_bold"
                                    android:text="12 سرویس"
                                    android:textColor="#303030"
                                    android:textSize="14dp"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintTop_toBottomOf="@+id/textView55" />
                            </android.support.constraint.ConstraintLayout>

                            <android.support.constraint.ConstraintLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toEndOf="@+id/constraintLayout16"
                                app:layout_constraintTop_toTopOf="parent">

                                <TextView
                                    android:id="@+id/textView77"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="8dp"
                                    android:fontFamily="@font/iransans_bold"
                                    android:text="پیک"
                                    android:textColor="#8d94a6"
                                    android:textSize="14dp"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintTop_toBottomOf="@+id/imageView78" />

                                <ImageView
                                    android:id="@+id/imageView78"
                                    android:layout_width="28dp"
                                    android:layout_height="28dp"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintTop_toTopOf="parent"
                                    app:srcCompat="@drawable/peyk" />

                                <TextView
                                    android:id="@+id/txtCountServicePeyk"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="8dp"
                                    android:fontFamily="@font/iransans_fa_num_bold"
                                    android:textColor="#303030"
                                    android:textSize="14dp"
                                    android:text="12 سرویس"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintTop_toBottomOf="@+id/textView77" />
                            </android.support.constraint.ConstraintLayout>
                        </android.support.constraint.ConstraintLayout>

                        <android.support.v7.widget.RecyclerView
                            android:id="@+id/recycler_view"
                            android:layout_width="0dp"
                            android:layout_height="0dp"
                            android:layout_marginTop="8dp"
                            android:layout_marginBottom="8dp"
                            app:layout_constraintBottom_toTopOf="@+id/main_tabLayout"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/constraintLayout13" />

                        <com.ogaclejapan.smarttablayout.SmartTabLayout
                            android:id="@+id/main_tabLayout"
                            android:layout_width="fill_parent"
                            android:layout_height="@dimen/tabLayoutHeightTextImage"
                            android:layout_gravity="bottom"
                            android:background="@color/white"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintHorizontal_bias="1.0"
                            app:layout_constraintStart_toStartOf="parent"
                            app:stl_clickable="true"
                            app:stl_defaultTabTextColor="@color/grey"
                            app:stl_distributeEvenly="true"
                            app:stl_dividerColor="@color/transparent"
                            app:stl_indicatorColor="@color/transparent"
                            app:stl_indicatorInterpolation="linear"
                            app:stl_indicatorThickness="0.0dip"
                            app:stl_underlineColor="@color/transparent" />

                    </android.support.constraint.ConstraintLayout>

                </android.support.v7.widget.CardView>

            </android.support.v7.widget.CardView>

        </android.support.constraint.ConstraintLayout>


        <android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            android:id="@+id/design_wallet"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="56dp"
            android:background="@color/colorAccent"
            android:layoutDirection="ltr"
            android:visibility="visible">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <android.support.v7.widget.Toolbar
                    android:id="@+id/toolbar_wallet"
                    android:layout_width="match_parent"
                    android:layout_height="?attr/actionBarSize"
                    app:contentInsetStartWithNavigation="0dp"
                    app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
                    app:theme="@style/Toolbar.Light" />


                <TextView
                    android:id="@+id/mSend_title_wallet"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:fontFamily="@font/iransans_bold"
                    android:paddingLeft="@dimen/spacing_large"
                    android:paddingTop="@dimen/spacing_regular"
                    android:paddingRight="@dimen/spacing_large"
                    android:paddingBottom="@dimen/spacing_regular"
                    android:text="کیف پول"
                    android:textAllCaps="true"
                    android:textColor="#464126"
                    android:textSize="15dp"
                    android:textStyle="bold" />

            </RelativeLayout>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="?actionBarSize"
                android:layout_marginBottom="-25dp"
                app:cardBackgroundColor="#eeedee"
                app:cardCornerRadius="25dp">

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="8dp"
                    app:cardBackgroundColor="#ffffff"
                    app:cardCornerRadius="25dp">

                    <android.support.constraint.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="25dp">

                        <TextView
                            android:id="@+id/txt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:layout_marginBottom="8dp"
                            android:fontFamily="@font/iransans_bold"
                            android:text="موجودی کیف پول شما :"
                            android:textAllCaps="true"
                            android:textColor="#464126"
                            android:textSize="14dp"
                            android:textStyle="bold"
                            app:layout_constraintBottom_toTopOf="@+id/txtBalance1"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent" />


                        <TextView
                            android:id="@+id/txtBalance1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:layout_marginBottom="80dp"
                            android:fontFamily="@font/iransans_fa_num_bold"
                            android:text="15000 تومان"
                            android:textAllCaps="true"
                            android:textColor="#464126"
                            android:textSize="16dp"
                            android:textStyle="bold"
                            app:layout_constraintBottom_toTopOf="@+id/linearLayout4"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent" />

                        <LinearLayout
                            android:id="@+id/linearLayout4"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="8dp"
                            android:layout_marginEnd="8dp"
                            android:layout_marginBottom="32dp"
                            android:gravity="center"
                            android:layoutDirection="rtl"
                            app:layout_constraintBottom_toTopOf="@+id/constraintLayout7"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                app:srcCompat="@drawable/ic_increase16" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="8dp"
                                android:fontFamily="@font/iransans_bold"
                                android:text="افزایش اعتبار"
                                android:textAllCaps="true"
                                android:textColor="#5b596b"
                                android:textSize="14dp"
                                android:textStyle="bold" />


                        </LinearLayout>

                        <android.support.constraint.ConstraintLayout
                            android:id="@+id/constraintLayout7"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="32dp"
                            android:layoutDirection="ltr"
                            android:padding="8dp"
                            app:layout_constraintBottom_toTopOf="@+id/constraintLayout8"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent">

                            <TextView
                                android:id="@+id/btnWallet10"
                                android:layout_width="100dp"
                                android:layout_height="42dp"
                                android:layout_marginStart="8dp"
                                android:layout_marginEnd="8dp"
                                android:background="@drawable/oval77"
                                android:fontFamily="@font/iransans_fa_num_bold"
                                android:gravity="center"
                                android:text="10،000 تومان"
                                android:textColor="#5b596b"
                                android:textSize="14dp"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toEndOf="@+id/btnWallet20"
                                app:layout_constraintTop_toTopOf="parent" />

                            <TextView
                                android:id="@+id/btnWallet20"
                                android:layout_width="100dp"
                                android:layout_height="42dp"
                                android:layout_marginStart="8dp"
                                android:layout_marginEnd="8dp"
                                android:background="@drawable/oval77"
                                android:fontFamily="@font/iransans_fa_num_bold"
                                android:gravity="center"
                                android:text="20،000 تومان"
                                android:textColor="#5b596b"
                                android:textSize="14dp"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent" />

                            <TextView
                                android:id="@+id/btnWallet50"
                                android:layout_width="100dp"
                                android:layout_height="42dp"
                                android:layout_marginStart="8dp"
                                android:layout_marginEnd="8dp"
                                android:background="@drawable/oval77"
                                android:fontFamily="@font/iransans_fa_num_bold"
                                android:gravity="center"
                                android:text="50،000 تومان"
                                android:textColor="#5b596b"
                                android:textSize="14dp"
                                app:layout_constraintEnd_toStartOf="@+id/btnWallet20"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent" />
                        </android.support.constraint.ConstraintLayout>

                        <android.support.constraint.ConstraintLayout
                            android:id="@+id/constraintLayout8"
                            android:layout_width="395dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="8dp"
                            android:layout_marginEnd="8dp"
                            android:layout_marginBottom="32dp"
                            android:layoutDirection="ltr"
                            android:padding="8dp"
                            app:layout_constraintBottom_toTopOf="@+id/button5"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent">

                            <ImageView
                                android:id="@+id/imageView10"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginEnd="8dp"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintEnd_toStartOf="@+id/editText3"
                                app:layout_constraintHorizontal_bias="1.0"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent"
                                app:srcCompat="@drawable/ic_reduce30" />

                            <ImageView
                                android:id="@+id/imageView18"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="8dp"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintHorizontal_bias="0.0"
                                app:layout_constraintStart_toEndOf="@+id/editText3"
                                app:layout_constraintTop_toTopOf="parent"
                                app:srcCompat="@drawable/ic_increase30" />

                            <EditText
                                android:id="@+id/editText3"
                                android:layout_width="150dp"
                                android:layout_height="45dp"
                                android:layout_margin="2dp"
                                android:background="@drawable/oval98"
                                android:ems="10"
                                android:fontFamily="@font/iransans_fa_num_medium"
                                android:gravity="center"
                                android:hint="مبلغ خود را وارد کنید"
                                android:inputType="number"
                                android:textSize="14dp"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent" />
                        </android.support.constraint.ConstraintLayout>

                        <Button
                            android:id="@+id/button5"
                            android:layout_width="170dp"
                            android:layout_height="50dp"
                            android:layout_marginBottom="32dp"
                            android:background="@drawable/oval99"
                            android:fontFamily="@font/iransans_bold"
                            android:text="پرداخت"
                            android:textColor="#fff"
                            android:textSize="15dp"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent" />

                    </android.support.constraint.ConstraintLayout>

                </android.support.v7.widget.CardView>

            </android.support.v7.widget.CardView>

        </android.support.constraint.ConstraintLayout>
    </RelativeLayout>


    <android.support.design.widget.NavigationView
        android:id="@+id/navigation_view_right"
        android:layout_width="280dp"
        android:layout_height="match_parent"
        android:layout_gravity="right"
        android:layoutDirection="ltr">


        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#fff"
            android:layoutDirection="ltr">


            <LinearLayout
                android:id="@+id/wallet_increase"
                android:layout_width="wrap_content"
                android:layout_height="56dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_marginLeft="16dp"
